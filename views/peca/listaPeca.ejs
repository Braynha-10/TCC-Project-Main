<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Lista de Peças</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/public/listagens.css">
</head>
<body>
  <div class="container col-12 col-sm-11 col-md-10 py-4">
    <h1 class="text-center mb-4">Lista de Solicitações de Peças</h1>

    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>Mecânico</th>
            <th>Nome da Peça</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Status</th>
            <% if (gerente) { %><th class="text-center">Ações</th><% } %>
          </tr>
        </thead>
        <tbody>
          <% if (pecas && pecas.length) { %>
            <% pecas.forEach(peca => { %>
              <tr>
                <td><%= peca.Mecanico ? peca.Mecanico.nome : '-' %></td>
                <td><%= peca.nome || '-' %></td>
                <td><%= peca.descricao || '-' %></td>
                <td>
                  <% if (peca.preco != null && peca.preco !== '') { %>
                    R$ <%= Number(peca.preco).toFixed(2) %>
                  <% } else { %>
                    -
                  <% } %>
                </td>
                <td>
                  <% if (peca.status === 'APROVADO' || peca.status === 'Aprovado') { %>
                    <span class="badge bg-success">APROVADO</span>
                  <% } else if (peca.status === 'REJEITADO' || peca.status === 'Rejeitado') { %>
                    <span class="badge bg-danger">REJEITADO</span>
                  <% } else { %>
                    <span class="badge bg-secondary"><%= (peca.status || 'PENDENTE').toUpperCase() %></span>
                  <% } %>
                </td>

                <% if (gerente) { %>
                  <td class="text-center">
                    <form action="/gerente/pecas/solicitacoes" method="post" class="d-flex gap-2 justify-content-center align-items-center m-0">
                      <input type="hidden" name="solicitacaoId" value="<%= peca.id %>">
                      <select name="status" class="form-select form-select-sm" style="width:140px;" <%= (peca.status === 'APROVADO' || peca.status === 'Aprovado') ? 'disabled' : '' %>>
                        <option value="APROVADO">Aprovar</option>
                        <option value="REJEITADO">Rejeitar</option>
                      </select>
                      <button type="submit" class="btn btn-sm btn-primary" <%= (peca.status === 'APROVADO' || peca.status === 'Aprovado') ? 'disabled' : '' %>>Alterar</button>
                    </form>
                  </td>
                <% } %>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="<%= gerente ? 6 : 5 %>" class="text-center">Nenhuma solicitação encontrada.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="d-flex justify-content-center mt-3">
      <% if (typeof mecanico !== 'undefined' && mecanico) { %>
        <a href="/mecanico/painelMecanico" class="btn btn-danger">Voltar</a>
      <% } else { %>
        <a href="/gerente/painelGerente" class="btn btn-danger">Voltar</a>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>