<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Lista de Peças</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/public/listagens.css">
</head>
<body>
  <div class="container col-12 col-sm-11 col-md-10 py-4">
    <h1 class="text-center mb-4">Lista de Peças</h1>
    <form method="GET" class="d-flex mb-3">
      <input 
        type="text" 
        name="search" 
        class="form-control" 
        placeholder="Buscar peça..." 
        value="<%= search || '' %>"
      >
      <button class="btn btn-primary ms-2">Buscar</button>
    </form>

    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Estoque</th>
            <th>Status</th>
            <th class="text-center">Ações</th>
            <th>Solicitação</th>
          </tr>
        </thead>
        <tbody>
          <% if (pecas && pecas.length) { %>
            <% pecas.forEach(peca => { %>
              <tr>
                <td><%= peca.nome || '-' %></td>
                <td><%= peca.descricao || '-' %></td>
                <td>
                  <% if (typeof peca.preco !== 'undefined' && peca.preco !== null && peca.preco !== '') { %>
                    R$ <%= Number(peca.preco).toFixed(2) %>
                  <% } else { %>
                    -
                  <% } %>
                </td>
                <td><%= typeof peca.quantidade !== 'undefined' ? peca.quantidade : '-' %></td>
                <td>
                  <% const s = (peca.status || 'PENDENTE').toString().toUpperCase(); %>
                  <% if (s === 'APROVADO') { %>
                    <span class="badge bg-success"><%= s %></span>
                  <% } else if (s === 'REJEITADO' || s === 'RECUSADO') { %>
                    <span class="badge bg-danger"><%= s %></span>
                  <% } else { %>
                    <span class="badge bg-secondary"><%= s %></span>
                  <% } %>
                </td>
                <td class="text-center">
                  <a href="/gerente/pecas/modifica/<%= peca.id %>" class="btn btn-sm btn-warning">Editar</a>

                  <!-- usa data-nome para evitar problemas de escape -->
                  <button type="button"
                          class="btn btn-sm btn-danger"
                          data-nome="<%= (peca.nome || '').replace(/\"/g, '&quot;') %>"
                          onclick="openDeleteModal(<%= peca.id %>, this.getAttribute('data-nome'))">
                    Deletar
                  </button>
                </td>
                <% if (gerente) { %>
                  <td class="text-center">
                    <div class="d-flex justify-content-center align-items-center">
                      <button class="btn btn-sm btn-primary btn-aprovar" type="button"
                              data-id="<%= peca.id %>"
                              data-nome="<%= (peca.nome || '').replace(/\"/g, '&quot;') %>"
                              data-estoque="<%= typeof peca.quantidade !== 'undefined' ? peca.quantidade : 0 %>"
                              <%= (peca.status === 'APROVADO' || peca.status === 'Aprovado') ? 'disabled' : '' %>>
                        Aprovar / Rejeitar
                      </button>
                    </div>
                    <div class="mt-2 confirm-box" style="min-height:2.5rem;"></div>
                  </td>
                <% } %>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6" class="text-center">Nenhuma peça cadastrada.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    
    <nav class="d-flex justify-content-center mt-3">
      <ul class="pagination">

        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= search %>">Anterior</a>
          </li>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
          </li>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= search %>">Próximo</a>
          </li>
        <% } %>

      </ul>
    </nav>

    <div class="d-flex justify-content-center mt-3">
      <% if (typeof mecanico !== 'undefined' && mecanico) { %>
        <a href="/mecanico/painelMecanico" class="btn btn-danger">Voltar</a>
      <% } else { %>
        <a href="/gerente/painelGerente" class="btn btn-danger">Voltar</a>
      <% } %>
    </div>
  </div>

  <!-- Modal Bootstrap para confirmar exclusão -->
  <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <form id="deleteForm" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteModalLabel">Confirmar exclusão</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
          </div>
          <div class="modal-body">
            <p id="deleteMessage">Tem certeza que deseja excluir esta peça?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-danger">Sim, excluir</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const deleteModalEl = document.getElementById('deleteModal');
    const deleteForm = document.getElementById('deleteForm');
    const deleteMessage = document.getElementById('deleteMessage');
    const bsDeleteModal = new bootstrap.Modal(deleteModalEl);

    function openDeleteModal(pecaId, pecaNome) {
      deleteForm.action = `/gerente/pecas/deletar/${pecaId}?_method=DELETE`;
      deleteMessage.textContent = `Tem certeza que deseja excluir a peça "${pecaNome}"?`;
      bsDeleteModal.show();
    }
  </script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.btn-aprovar').forEach(btn => {
        const row = btn.closest('tr');
        const confirmBox = row.querySelector('.confirm-box');

        btn.addEventListener('click', () => {
          confirmBox.innerHTML = '';
          const id = btn.dataset.id;
          const nome = btn.dataset.nome;
          const estoque = parseInt(btn.dataset.estoque || '0', 10);

          // criar interface de confirmação
          const wrapper = document.createElement('div');
          wrapper.className = 'd-flex gap-2 align-items-center flex-wrap';

          const info = document.createElement('span');
          info.innerHTML = `Confirmar solicitação da peça "<strong>${nome}</strong>". Estoque atual: ${estoque}.`;

          const qty = document.createElement('input');
          qty.type = 'number';
          qty.min = '0';
          qty.value = '0';
          qty.className = 'form-control form-control-sm';
          qty.style.width = '90px';
          qty.title = 'Quantidade a adicionar (apenas se aprovar)';

          const aprovarBtn = document.createElement('button');
          aprovarBtn.className = 'btn btn-sm btn-success';
          aprovarBtn.textContent = 'Aprovar + adicionar';

          const aprovarSemAddBtn = document.createElement('button');
          aprovarSemAddBtn.className = 'btn btn-sm btn-secondary';
          aprovarSemAddBtn.textContent = 'Aprovar (sem adicionar)';

          const rejeitarBtn = document.createElement('button');
          rejeitarBtn.className = 'btn btn-sm btn-danger';
          rejeitarBtn.textContent = 'Rejeitar';

          const cancelarBtn = document.createElement('button');
          cancelarBtn.className = 'btn btn-sm btn-outline-dark';
          cancelarBtn.textContent = 'Cancelar';

          wrapper.appendChild(info);
          wrapper.appendChild(qty);
          wrapper.appendChild(aprovarBtn);
          wrapper.appendChild(aprovarSemAddBtn);
          wrapper.appendChild(rejeitarBtn);
          wrapper.appendChild(cancelarBtn);
          confirmBox.appendChild(wrapper);

          async function send(status, addQty = 0) {
            try {
              const res = await fetch('/gerente/pecas/solicitacoes', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ solicitacaoId: id, status, addQuantity: addQty })
              });
              const json = await res.json();
              confirmBox.innerHTML = '';
              const span = document.createElement('span');
              if (res.ok && json.ok) {
                span.className = 'badge bg-success';
                span.textContent = json.message || 'Operação realizada';
                // atualiza status badge na tabela
                const statusCell = row.querySelector('td:nth-child(5)');
                if (statusCell) statusCell.innerHTML = `<span class="badge bg-success">${(status||'APROVADO')}</span>`;
                // atualizar estoque se retornado
                if (typeof json.newQuantity !== 'undefined') {
                  const estoqueCell = row.querySelectorAll('td')[3];
                  if (estoqueCell) estoqueCell.textContent = json.newQuantity;
                }
              } else {
                span.className = 'badge bg-danger';
                span.textContent = json.message || 'Erro';
              }
              confirmBox.appendChild(span);
              setTimeout(() => span.remove(), 3500);
            } catch (err) {
              confirmBox.innerHTML = '';
              const span = document.createElement('span');
              span.className = 'badge bg-danger';
              span.textContent = 'Erro de rede';
              confirmBox.appendChild(span);
              setTimeout(() => span.remove(), 3500);
            }
          }

          aprovarBtn.addEventListener('click', () => send('APROVADO', parseInt(qty.value || '0', 10)));
          aprovarSemAddBtn.addEventListener('click', () => send('APROVADO', 0));
          rejeitarBtn.addEventListener('click', () => send('REJEITADO', 0));
          cancelarBtn.addEventListener('click', () => { confirmBox.innerHTML = ''; });
        });
      });
    });
  </script>
</body>
</html>