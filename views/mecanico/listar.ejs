<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Lista de Mecânicos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/public/listagens.css">
</head>
<body>
  <div class="container col-12 col-sm-11 col-md-10 py-4">
    <h1 class="text-center mb-4">Lista de Mecânicos</h1>
    <form method="GET" class="d-flex mb-3">
      <input 
        type="text" 
        name="search" 
        class="form-control" 
        placeholder="Buscar mecânico..." 
        value="<%= search %>"
      >
      <button class="btn btn-primary ms-2">Buscar</button>
    </form>

    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
            <th>Especialidade</th>
            <th>Salário</th>
            <th>Comissão</th>
            <th class="text-center">Editar</th>
            <th class="text-center">Deletar</th>
          </tr>
        </thead>
        <tbody>
          <% if (mecanicos && mecanicos.length) { %>
            <% mecanicos.forEach(mecanico => { %>
              <tr>
                <td><%= mecanico.nome %></td>
                <td><%= mecanico.email || '-' %></td>
                <td><%= mecanico.telefone || '-' %></td>
                <td><%= mecanico.especialidade || '-' %></td>
                <td><%= typeof mecanico.salario !== 'undefined' ? 'R$ ' + Number(mecanico.salario).toFixed(2) : '-' %></td>
                <td><%= typeof mecanico.comissao !== 'undefined' ? mecanico.comissao + '%' : '-' %></td>
                <td class="text-center">
                  <a href="/gerente/mecanico/editar/<%= mecanico.id %>" class="btn btn-sm btn-warning">Editar</a>
                </td>
                <td class="text-center">
                  <button class="btn btn-sm btn-danger" onclick="openDeleteModal(<%= mecanico.id %>, '<%= (mecanico.nome || '').replace(/'/g, "\\'") %>')">Deletar</button>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="8" class="text-center">Nenhum mecânico cadastrado.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <nav class="d-flex justify-content-center mt-3">
      <ul class="pagination">

        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= search %>">Anterior</a>
          </li>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
          </li>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= search %>">Próximo</a>
          </li>
        <% } %>

      </ul>
    </nav>

    <div class="d-flex justify-content-center mt-3">
      <a href="/gerente/painelGerente" class="btn btn-danger">Voltar</a>
    </div>
  </div>

  <!-- Modal Bootstrap para confirmar exclusão -->
  <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <form id="deleteForm" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteModalLabel">Confirmar exclusão</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
          </div>
          <div class="modal-body">
            <p id="deleteMessage">Tem certeza que deseja excluir este mecânico?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-danger">Sim, excluir</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const deleteModalEl = document.getElementById('deleteModal');
    const deleteForm = document.getElementById('deleteForm');
    const deleteMessage = document.getElementById('deleteMessage');
    const bsDeleteModal = new bootstrap.Modal(deleteModalEl);

    function openDeleteModal(mecanicoId, mecanicoNome) {
      deleteForm.action = `/gerente/mecanicos/${mecanicoId}?_method=DELETE`;
      deleteMessage.textContent = `Tem certeza que deseja excluir o mecânico "${mecanicoNome}"?`;
      bsDeleteModal.show();
    }
  </script>
</body>
</html>