<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Ve√≠culos</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/listagens.css">
</head>

<body>
    <div class="container col-12 col-sm-11 col-md-8">
        <h1 class="text-center mt-3">Lista de Ve√≠culos</h1>

        <!-- üîç Barra de Busca -->
        <form action="/mecanico/veiculos" method="GET" class="d-flex my-3">
            <input type="text" name="search" class="form-control" placeholder="Buscar ve√≠culo..." value="<%= search %>">
            <button class="btn btn-primary ms-2">Buscar</button>
        </form>

        <!-- Tabela -->
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Modelo</th>
                        <th>Marca</th>
                        <th>Ano</th>
                        <th>ID do Cliente</th>
                        <th>A√ß√µes</th>
                    </tr>
                </thead>

                <tbody>
                    <% Veiculo.forEach(veiculo => { %>
                    <tr>
                        <td><%= veiculo.modelo %></td>
                        <td><%= veiculo.marca %></td>
                        <td><%= veiculo.ano %></td>
                        <td><%= veiculo.id_cliente %></td>
                        <td>
                            <a href="/mecanico/veiculos/<%= veiculo.id %>/editar" class="btn btn-warning btn-sm">Editar</a>
                            <form action="/mecanico/veiculos/<%= veiculo.id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Deletar</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- PAGINA√á√ÉO -->
        <nav class="d-flex justify-content-center">
            <ul class="pagination">
                
                <% if (currentPage > 1) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= search %>">Anterior</a>
                </li>
                <% } %>

                <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
                </li>
                <% } %>

                <% if (currentPage < totalPages) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= search %>">Pr√≥ximo</a>
                </li>
                <% } %>

            </ul>
        </nav>

        <div class="d-flex justify-content-center mt-4">
            <a href="/mecanico/painelMecanico" class="btn btn-danger">Voltar</a>
        </div>
    </div>

</body>
</html>
