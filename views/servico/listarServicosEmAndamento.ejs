<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Serviços em Andamento</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/public/listagens.css">
</head>
<body>
  <div class="container col-12 col-sm-11 col-md-10 py-4">
    <h1 class="text-center mb-4">Serviços em Andamento</h1>

    <div class="table-responsive">
      <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
          <tr>
            <th>Mecânico</th>
            <th>Veículo</th>
            <th>Cliente</th>
            <th>Peça</th>
            <th>Serviço</th>
            <th>Descrição</th>
            <th>Status</th>
            <th class="text-center">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% if (Servicos && Servicos.length) { %>
            <% Servicos.forEach(servico => { %>
              <tr>
                <td><%= servico.Mecanico ? servico.Mecanico.nome : '-' %></td>
                <td><%= servico.Veiculo ? servico.Veiculo.modelo : '-' %></td>
                <td>
                  <% if (servico.Veiculo && servico.Veiculo.Cliente) { %>
                    <%= servico.Veiculo.Cliente.nome %>
                  <% } else { %>
                    -
                  <% } %>
                </td>
                <td><%= servico.Peca ? servico.Peca.nome : '-' %></td>
                <td><%= servico.Catalogo ? servico.Catalogo.nome : '-' %></td>
                <td><%= servico.descricao || '-' %></td>
                <td><span class="badge bg-warning text-dark"><%= servico.status || '-' %></span></td>
                <td class="text-center">
                  <button type="button"
                          class="btn btn-sm btn-success"
                          onclick="openFinalizeModal(<%= servico.id %>)">
                    Finalizar
                  </button>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="8" class="text-center">Nenhum serviço em andamento.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="d-flex justify-content-center mt-3">
      <a href="/mecanico/painelMecanico" class="btn btn-danger">Voltar</a>
    </div>
  </div>

  <!-- Modal Bootstrap para finalizar serviço -->
  <div class="modal fade" id="finalizeModal" tabindex="-1" aria-labelledby="finalizeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
      <div class="modal-content">
        <form id="finalizeForm" method="POST">
          <input type="hidden" name="_method" value="PATCH">
          <div class="modal-header">
            <h5 class="modal-title" id="finalizeModalLabel">Finalizar Serviço</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
          </div>
          <div class="modal-body">
            <p>Deseja confirmar a finalização deste serviço?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-primary">Sim, finalizar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const finalizeModalEl = document.getElementById('finalizeModal');
    const finalizeForm = document.getElementById('finalizeForm');
    const bootstrapModal = new bootstrap.Modal(finalizeModalEl);

    function openFinalizeModal(servicoId) {
      // Ajuste a action conforme sua rota de finalização (mantive o padrão que você usava)
      finalizeForm.action = `/mecanico/servico/listarServicos/FinalizarServico/${servicoId}?_method=PATCH`;
      bootstrapModal.show();
    }
  </script>
</body>
</html>