<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Clientes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/listagens.css">
</head>
<body>
    <div class="container col-12 col-sm-11 col-md-8 py-4">
        <h1 class="text-center mb-4">Lista de Clientes</h1>

        <!-- üîç BARRA DE BUSCA -->
        <form action="/mecanico/clientes" method="GET" class="d-flex my-3">
            <input type="text" name="search" class="form-control" placeholder="Buscar cliente..." value="<%= search %>">
            <button class="btn btn-primary ms-2">Buscar</button>
        </form>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Telefone</th>
                        <th>Email</th>
                        <th>Endere√ßo</th>
                        <th class="text-center">A√ß√µes</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (Cliente && Cliente.length) { %>
                        <% Cliente.forEach(cliente => { %>
                            <tr>
                                <td><%= cliente.nome %></td>
                                <td><%= cliente.telefone || '-' %></td>
                                <td><%= cliente.email || '-' %></td>
                                <td><%= cliente.endereco || '-' %></td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-warning" href="/mecanico/cliente/<%= cliente.id %>/editar">Editar</a>

                                    <form action="/mecanico/clientes/<%= cliente.id %>?_method=DELETE" method="POST" style="display:inline;">
                                        <button class="btn btn-sm btn-danger" type="submit" onclick="return confirm('Confirma exclus√£o deste cliente?')">Deletar</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center">Nenhum cliente cadastrado.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- üîΩ PAGINA√á√ÉO -->
        <nav class="d-flex justify-content-center">
            <ul class="pagination">
                
                <% if (currentPage > 1) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>&search=<%= search %>">Anterior</a>
                </li>
                <% } %>

                <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
                </li>
                <% } %>

                <% if (currentPage < totalPages) { %>
                <li class="page-item">
                    <a class="page-link" href="?page=<%= currentPage + 1 %>&search=<%= search %>">Pr√≥ximo</a>
                </li>
                <% } %>

            </ul>
        </nav>

        <div class="d-flex justify-content-center mt-3">
            <a href="/mecanico/painelMecanico" class="btn btn-danger">Voltar</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
